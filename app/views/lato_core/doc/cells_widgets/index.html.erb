<%=raw code.open %>

<%= erb_open_tag %>=raw cell(:widgets, :index).new(records: @superusers, index_url: lato_core.superusers_path,
head: ['Name', 'Surname', 'Email', 'Username'], columns: ['name', 'surname', 'email', 'username'],
actions: {show: true, edit: true, delete: true, new: true}, search: true) <%= erb_close_tag %>

<%=raw code.close %>

<%=raw block.close %>

<%=raw row.close %>
