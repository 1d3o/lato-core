<%
  row = cell(:elements, :row).new
  block = cell(:elements, :block).new(class: 'xs-12 sm-12 md-12')
  code = cell(:elements, :code).new
  form = cell(:inputs, :form).new(url: '#', method: 'get')
%>

<!-- PRESENTATION -->
<%=raw row.open %>

  <%=raw block.open %>

    <%=raw cell(:elements, :title).new(label: 'Cells Inputs: Select') %>

    <p>A Sortableblock is a sortable input.</p>

  <%=raw block.close %>

<%=raw row.close %>
<!-- / PRESENTATION -->

<hr>
<%=raw cell(:elements, :title).new(label: 'Field group', size: 3) %>

<%=raw row.open %>

  <%=raw block.open %>

    <%=raw form.open %>

      <%=raw row.open %>

        <% text1 = cell(:inputs, :text).new(name: 'sample', label: 'Insert your text vecch') %>
        <% text2 = cell(:inputs, :text).new(name: 'sample-1', label: 'Insert your text here') %>
        <% component1 = {id: 1, position: 1, component: text1 }  %>
        <% component2 = {id: 2, position: 2, component: text2 }  %>
        <%=raw cell(:inputs, :sortableblock).new(name: 'sample', components: [component1, component2]) %>

      <%=raw row.close %>

    <%=raw form.close %>

  <%=raw block.close %>

<%=raw row.close %>

<hr>

<%=raw cell(:elements, :title).new(label: 'Other field group', size: 3) %>

<%=raw row.open %>

  <%=raw block.open %>

    <%=raw form.open %>

      <%=raw row.open %>

        <% text3 = cell(:inputs, :text).new(name: 'sample-3', label: 'Insert your text vecch') %>

        <% map = cell(:inputs, :geolocalization).new(label: 'Select a point on the map') %>
        <% grafico = cell(:charts, :bar, :vertical).new(
          labels: ['01', '02', '03'],
          datasets: [
            {label: 'Interactions', data: [403, 959, 234]},
            {label: 'Downloads', data: [124, 390, 87]}
          ]
        ) %>
        <% component3 = {id: 1, position: 1, component: text3 }  %>
        <% component4 = {id: 2, position: 2, component: map }  %>
        <% component5 = {id: 2, position: 2, component: grafico }  %>
        <%=raw cell(:inputs, :sortableblock).new(name: 'sample', components: [component3, component4, component5]) %>

      <%=raw row.close %>

    <%=raw form.close %>

  <%=raw block.close %>

<%=raw row.close %>

<div style="margin-top: 1000px;"></div>
