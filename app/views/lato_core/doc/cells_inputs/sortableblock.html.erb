<%
  row = cell(:elements, :row).new
  block = cell(:elements, :block).new(class: 'xs-12 sm-12 md-12')
  code = cell(:elements, :code).new
  form = cell(:inputs, :form).new(url: '#', method: 'get')
%>

<!-- PRESENTATION -->
<%=raw row.open %>

  <%=raw block.open %>

    <%=raw cell(:elements, :title).new(label: 'Cells Inputs: Sortableblock') %>

    <p>A Sortableblock is a sortable input used to change elements position.</p>

  <%=raw block.close %>

<%=raw row.close %>
<!-- / PRESENTATION -->

<hr>
<%=raw cell(:elements, :title).new(label: 'Normal sortableblock', size: 3) %>

<%=raw row.open %>

  <%=raw block.open %>

    <%=raw form.open %>

      <%=raw row.open %>

        <% input1 = cell(:inputs, :text).new(name: 'input-1', label: 'Insert your name') %>
        <% input2 = cell(:inputs, :text).new(name: 'input-2', label: 'Insert your surname') %>

        <%=raw cell(:inputs, :sortableblock).new(name: 'sample', components: [
          {id: 'input-1-sortable', position: 1, component: input1 },
          {id: 'input-2-sortable', position: 2, component: input2 }
        ]) %>

      <%=raw row.close %>

    <%=raw form.close %>

  <%=raw block.close %>

<%=raw row.close %>

<!-- CODE SECTION -->
<%=raw row.open %>

<%=raw block.open %>

<%=raw cell(:elements, :title).new(label: 'Code', size: 6) %>

<%=raw code.open %>

<%= erb_open_tag %>input1 = cell(:inputs, :text).new(name: 'input-1', label: 'Insert your name') <%= erb_close_tag %>
<%= erb_open_tag %>input2 = cell(:inputs, :text).new(name: 'input-2', label: 'Insert your surname') <%= erb_close_tag %>
<%= erb_open_tag %>=raw cell(:inputs, :sortableblock).new(name: 'sample', components: [
  {id: 'input-1-sortable', position: 1, component: input1 },
  {id: 'input-2-sortable', position: 2, component: input2 }
])<%= erb_close_tag %>

<%=raw code.close %>

<%=raw block.close %>

<%=raw row.close %>
<!-- / CODE SECTION -->
