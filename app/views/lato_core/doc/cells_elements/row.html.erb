<%
  row = cell(:elements, :row).new
  block = cell(:elements, :block).new(class: 'xs-12 sm-12 md-12')
  code = cell(:elements, :code).new
%>

<!-- PRESENTATION -->
<%=raw row.open %>

  <%=raw block.open %>

    <%=raw cell(:elements, :title).new(label: 'Cells Elements: Row') %>

    <p>A Row is a container where you can put blocks an other responsive components.</p>

  <%=raw block.close %>

<%=raw row.close %>
<!-- / PRESENTATION -->

<hr>
<%=raw cell(:elements, :title).new(label: 'Row with block inside', size: 3) %>

<% example_row = cell(:elements, :row).new %>

<%=raw example_row.open %>

  <%=raw block.open %>

    Content...
    
  <%=raw block.close %>

<%=raw example_row.close %>

<!-- CODE SECTION -->
<%=raw row.open %>

<%=raw block.open %>

<%=raw cell(:elements, :title).new(label: 'Code', size: 6) %>

<%=raw code.open %>

<%= erb_open_tag %> example_row = cell(:elements, :row).new <%= erb_close_tag %>

<%= erb_open_tag %>=raw example_row.open <%= erb_close_tag %>

  <%= erb_open_tag %>=raw block.open <%= erb_close_tag %>

    Content...

  <%= erb_open_tag %>=raw block.close <%= erb_close_tag %>

<%= erb_open_tag %>=raw example_row.close <%= erb_close_tag %>

<%=raw code.close %>

<%=raw block.close %>

<%=raw row.close %>
<!-- / CODE SECTION -->
