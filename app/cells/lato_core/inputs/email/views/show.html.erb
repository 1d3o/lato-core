<div class="inputs-email inputs__container <%= @args[:class] %>">

  <%= render '../../shared/label.html' %>

  <input
    class="inputs__input"
    type="email"
    value="<%= @args[:value] %>"
    name="<%= @args[:name] %>"
    placeholder="<%= @args[:placeholder] %>"
    data-required="<%= @args[:required] %>"
    <% if @args[:disabled] %>
      disabled
    <% end %>
  />

  <%= render '../../shared/help.html' %>
  
</div>
